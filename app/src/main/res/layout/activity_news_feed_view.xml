<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Main content layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <!-- Main image view -->
        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!-- Title text view -->
        <TextView
            android:id="@+id/fullTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainImageView"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <!-- Section title text view -->
        <TextView
            android:id="@+id/sectionTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullTitleTv"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <!-- Published date text view -->
        <TextView
            android:id="@+id/publishDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sectionTitleTV"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <!-- Article URL text view -->
        <TextView
            android:id="@+id/urlTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/publishDateTv"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/purple_500" />

        <!-- Save button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/urlTv"
            android:text="Save to Favorites" />

    </RelativeLayout>

</RelativeLayout>


